<div class="container">
  <div class ="row">
      <div class="col-xs-12 col-sm-10">
        <h1 class="mt-3 mb-3">Restaurants</h1>
        <ul class="list-group">
        <% @restaurants.each do |restaurant| %>
            <li class="list-group-item"><%= restaurant.name %>
            <%= link_to 'More info', restaurant_path(restaurant.id) %></li>
        <% end %>
        </ul>
        <%= link_to new_restaurant_path do%>
          <i class="fas fa-plus btn btn-primary mt-4 text-white p-3"> Add a new restaurant</i>
      <% end %>
    </div>
  </div>
</div>
